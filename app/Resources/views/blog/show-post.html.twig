{% extends 'base.html.twig' %}

{% block content %}
    <h1>{{ post.heading }}</h1>
    <div>{{ post.createdAt|date }}</div>
    <div>{{ post.content }}</div>
    <ul class="list-inline">
        {% for tag in post.tags %}
            <li class="label label-default">{{ tag.name }}</li>
            <span class="badge">{{ tag.posts|length }}</span>
        {% endfor %}
    </ul>

{% endblock %}