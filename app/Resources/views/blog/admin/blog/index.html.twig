{% extends 'base.html.twig' %}

{% block content %}
    <a href="{{ path('admin_blog_post_new') }}" class="button btn btn-primary">Create post</a>
    <div class="pull-right">
        {#{{ posts|length }} posts#}
        {{ "count_posts"|transchoice( posts|length ) }}
    </div>
    <h1>Blog posts list</h1>


    <table class="table table-stripped">
        <tr>
            <th>ID</th>
            <th>Heading</th>
            <th>Slug</th>
            <th>createdAt</th>
            <th>updatedAt</th>
        </tr>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>
                    <a href="{{ path('admin_blog_post_edit',{id: post.id})  }}">{{ post.heading }}</a>
                </td>
                <td>{{ post.slug }}</td>
                <td>{{ post.createdAt|date }}</td>
                <td>{{ post.updatedAt|date }}</td>
            </tr>
        {% else %}
            no posts
        {% endfor %}
    </table>
{% endblock %}